<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context="Tokosaya">

    <!-- Head -->
    <RelativeLayout
        android:id="@+id/atas"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginTop="-3dp"
        android:background="@drawable/motif_atas"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tokosaya"
            android:layout_width="135dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="56dp"
            android:gravity="top"
            android:text="Toko Saya"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/icon_chat"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="30dp"
            android:src="@drawable/pesan" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="15dp"
            android:layout_toStartOf="@+id/icon_chat"
            android:src="@drawable/icon_setting" />

    </RelativeLayout>

    <!-- Body -->

    <RelativeLayout
        android:id="@+id/relativeLayout9"
        android:layout_width="433dp"
        android:layout_height="104dp"
        android:layout_marginTop="-12dp"
        android:background="@drawable/bg_namatoko"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/atas">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="52dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="52dp"
            android:src="@drawable/bg_detailtoko" />

        <ImageView
            android:id="@+id/atas1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="70dp"
            android:layout_marginTop="26dp"
            android:src="@drawable/profile_tokosaya" />

        <TextView
            android:id="@+id/atas2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="29dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/atas1"
            android:text="Pawang Ikan"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/jakbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/atas2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="160dp"
            android:layout_marginTop="2dp"
            android:text="Jakarta Barat"
            android:textSize="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/jakbar"
            android:layout_alignParentStart="true"
            android:layout_marginStart="160dp"
            android:layout_marginTop="2dp"
            android:text="Pengikut  40      |"
            android:textSize="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/jakbar"
            android:layout_alignParentStart="true"
            android:layout_marginStart="265dp"
            android:layout_marginTop="2dp"
            android:text="Mengikuti 11"
            android:textSize="13dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_detail_tokosaya"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="214dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/produksaya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:text="Produk Saya"
            android:textColor="@color/dua"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:text="Lihat Semua >" />


        <!-- Icon -->
        <ImageView
            android:id="@+id/icon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/produksaya"
            android:layout_alignParentStart="true"
            android:layout_marginStart="62dp"
            android:layout_marginTop="27dp"
            android:src="@drawable/icon_produksaya" />

        <ImageView
            android:id="@+id/icon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/produksaya"
            android:layout_marginStart="15dp"
            android:layout_marginTop="27dp"
            android:layout_toEndOf="@+id/icon1"
            android:src="@drawable/icon_tambahproduk" />

        <ImageView
            android:id="@+id/icon3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/produksaya"
            android:layout_marginStart="15dp"
            android:layout_marginTop="27dp"
            android:layout_toEndOf="@+id/icon2"
            android:src="@drawable/icon_postingan" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/produksaya"
            android:layout_marginStart="15dp"
            android:layout_marginTop="27dp"
            android:layout_toEndOf="@+id/icon3"
            android:src="@drawable/icon_ubahproduk" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/satu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_detail_tokosaya"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dua"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/penjualansaya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:text="Penjualan Saya"
            android:textColor="@color/dua"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:text="Lihat Semua >" />


        <!-- Icon -->
        <ImageView
            android:id="@+id/icon1_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/penjualansaya"
            android:layout_alignParentStart="true"
            android:layout_marginStart="70dp"
            android:layout_marginTop="27dp"
            android:src="@drawable/icon_dikemas" />

        <ImageView
            android:id="@+id/icon2_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/penjualansaya"
            android:layout_marginStart="40dp"
            android:layout_marginTop="27dp"
            android:layout_toEndOf="@+id/icon1_1"
            android:src="@drawable/icon_dikirim" />

        <ImageView
            android:id="@+id/icon3_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/penjualansaya"
            android:layout_marginStart="40dp"
            android:layout_marginTop="27dp"
            android:layout_toEndOf="@+id/icon2_2"
            android:src="@drawable/icon_selesai" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/penjualansaya"
            android:layout_marginStart="40dp"
            android:layout_marginTop="27dp"
            android:layout_toEndOf="@+id/icon3_3"
            android:src="@drawable/icon_lainnya" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/saldo"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/saldotoko"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/satu" />

    <ImageView
        android:id="@+id/penghasilan"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/penghasilan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saldo" />

    <ImageView
        android:id="@+id/penilaian"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/penilaiantoko"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/penghasilan" />

    <ImageView
        android:id="@+id/jasakirim"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/jasakirimtoko"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/penilaian" />

    <ImageView
        android:id="@+id/edukasi"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/edukasitoko"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jasakirim" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_navigasi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="-16dp">


        <ImageView
            android:id="@+id/beranda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="55dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/nav_beranda" />

        <ImageView
            android:id="@+id/feed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="18dp"
            android:layout_toEndOf="@+id/beranda"
            android:src="@drawable/nav_feed" />

        <ImageView
            android:id="@+id/tokosayanav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/nav_tokosaya"
            android:layout_toEndOf="@+id/feed" />

        <ImageView
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/nav_profile"
            android:layout_toEndOf="@+id/tokosayanav" />


    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>

