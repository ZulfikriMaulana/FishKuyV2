<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#2D8CCD"
    tools:context=".Onboarding1">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="336dp"
        android:layout_height="224dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        app:srcCompat="@drawable/onboarding1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="295dp"
        android:layout_height="176dp"
        android:layout_gravity="center"
        android:layout_marginTop="125dp"
        android:background="@drawable/rounded_onboarding"
        android:fontFamily="@font/poppins_semibold"
        android:paddingStart="20dp"
        android:paddingTop="30dp"
        android:paddingEnd="20dp"
        android:text="Bingung mau beli ikan tapi gak mau capek dan  menghemat waktu"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginStart="100dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Next"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:onClick="next2"/>

</LinearLayout>