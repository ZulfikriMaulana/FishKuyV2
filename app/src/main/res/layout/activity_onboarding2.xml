<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_onboard2"
    tools:context=".Onboarding2">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        app:srcCompat="@drawable/onboarding2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Di Fishkuy anda bisa menghemat waktu untuk membeli ikan"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="66dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:layout_marginStart="100dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/poppins_semibold"
        android:onClick="next5"
        android:text="@string/next"
        android:textColor="@color/dua"
        android:textSize="20sp" />

</LinearLayout>