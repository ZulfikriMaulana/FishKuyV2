<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Reseplainnya">

    <RelativeLayout
        android:id="@+id/atas"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginTop="-2dp"
        android:background="@drawable/motif_atas"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/ikan_air_tawar"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="56dp"
            android:gravity="top"
            android:text="Resep Makanan"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintStart_toEndOf="@+id/button2"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/button2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="55dp"
            android:clipToOutline="true"
            android:onClick="back25"
            android:src="@drawable/button_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:layout_constraintTop_toBottomOf="@+id/atas">

        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_marginTop="1dp"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent">

            <ImageView
                android:id="@+id/search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="25dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/search_pesan" />

            <EditText
                android:layout_width="276dp"
                android:layout_height="33dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="57dp" />

            <RelativeLayout
                android:id="@+id/resep1"
                android:layout_width="328dp"
                android:layout_height="141dp"
                android:layout_below="@+id/search"
                android:layout_alignParentStart="true"
                android:layout_marginStart="25dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/bg_reseplainnya">

                <ImageView
                    android:id="@+id/gambar_resep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="13dp"
                    android:src="@drawable/gambar_resep_lainnya" />

                <TextView
                    android:id="@+id/judulresep"
                    android:layout_width="158dp"
                    android:layout_height="54dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@+id/gambar_resep"
                    android:text="Nama Resep"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="158dp"
                    android:layout_height="54dp"
                    android:layout_below="@+id/judulresep"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_toEndOf="@+id/gambar_resep"
                    android:text="Detail Resep" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/resep2"
                android:layout_width="328dp"
                android:layout_height="141dp"
                android:layout_below="@+id/resep1"
                android:layout_alignParentStart="true"
                android:layout_marginStart="25dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_reseplainnya">

                <ImageView
                    android:id="@+id/gambar_resep2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="13dp"
                    android:src="@drawable/gambar_resep_lainnya" />

                <TextView
                    android:id="@+id/judulresep2"
                    android:layout_width="158dp"
                    android:layout_height="54dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@+id/gambar_resep2"
                    android:text="Nama Resep"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="158dp"
                    android:layout_height="54dp"
                    android:layout_below="@+id/judulresep2"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_toEndOf="@+id/gambar_resep2"
                    android:text="Detail Resep" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/resep3"
                android:layout_width="328dp"
                android:layout_height="141dp"
                android:layout_below="@+id/resep2"
                android:layout_alignParentStart="true"
                android:layout_marginStart="25dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_reseplainnya">

                <ImageView
                    android:id="@+id/gambar_resep3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="13dp"
                    android:src="@drawable/gambar_resep_lainnya" />

                <TextView
                    android:id="@+id/judulresep3"
                    android:layout_width="158dp"
                    android:layout_height="54dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@+id/gambar_resep3"
                    android:text="Nama Resep"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="158dp"
                    android:layout_height="54dp"
                    android:layout_below="@+id/judulresep3"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_toEndOf="@+id/gambar_resep3"
                    android:text="Detail Resep" />

            </RelativeLayout>




        </RelativeLayout>



    </ScrollView>





</LinearLayout>